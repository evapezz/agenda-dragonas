# Etapa de build
FROM node:18-alpine AS build
WORKDIR /app

# Copiamos los package.json e instalamos dependencias
COPY package*.json ./
RUN npm ci

# Copiamos el resto del c칩digo y construimos la app
COPY . .
RUN npm run build

# Etapa de producci칩n con Nginx
FROM nginx:alpine

# Copiamos la configuraci칩n personalizada de Nginx (SPA fallback, cabeceras, etc.)
COPY nginx.conf /etc/nginx/nginx.conf

# Copiamos los archivos est치ticos resultantes del build
COPY --from=build /app/dist /usr/share/nginx/html

# Exponemos el puerto 80 para HTTP
EXPOSE 80

# Arrancamos Nginx en primer plano
CMD ["nginx", "-g", "daemon off;"]
